{
    "name": "figma-graphql",
    "version": "2.0.0",
    "description": "The human-friendly Figma API",
    "main": "index.js",
    "scripts": {
        "start": "ts-node --transpile-only ./src/main.ts",
        "dev": "ts-node-dev --respawn --transpileOnly ./src/main.ts",
        "debug": "ts-node-dev --inspect --respawn ./src/main.ts",
        "docs:dev": "docusaurus start --no-open",
        "docs:build": "docusaurus build",
        "docs:swizzle": "docusaurus swizzle",
        "format": "prettier --write .",
        "test": "jest --setupFiles dotenv/config --no-cache",
        "test:watch": "jest --setupFiles dotenv/config --watch --no-cache",
        "lint": "eslint . --ignore-path .gitignore --ext .ts",
        "lint:check": "eslint --print-config . | eslint-config-prettier-check",
        "commit": "yarn git-cz",
        "semantic-release": "semantic-release",
        "snyk-protect": "snyk protect",
        "prepublishOnly": "yarn snyk-protect",
        "ts:check": "tsc -p tsconfig.json --allowJs false --noEmit"
    },
    "keywords": [
        "figma",
        "design",
        "tools",
        "graphql",
        "api"
    ],
    "author": "Bernardo Raposo <hi@bernardoraposo.com> (https://github.com/braposo)",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/braposo/figma-graphql.git"
    },
    "dependencies": {
        "@types/cors": "^2.8.6",
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.6",
        "@types/graphql-resolve-batch": "^1.1.5",
        "@types/lodash": "^4.14.152",
        "apollo-datasource-rest": "^0.9.0",
        "apollo-server-caching": "^0.5.1",
        "apollo-server-errors": "^2.4.1",
        "apollo-server-express": "^2.13.1",
        "apollo-server-micro": "^2.13.1",
        "axios": "^0.19.2",
        "class-validator": "^0.12.2",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "figma-js": "^1.10.1",
        "figma-transformer": "^1.0.0",
        "graphql": "^15.0.0",
        "graphql-playground-html": "^1.6.19",
        "graphql-resolve-batch": "^1.0.2",
        "graphql-tools": "^6.0.0",
        "http-cache-semantics": "^4.1.0",
        "lodash": "^4.17.15",
        "reflect-metadata": "^0.1.13",
        "snyk": "^1.324.0",
        "ts-node": "^8.10.1",
        "type-graphql": "^1.0.0-rc.2"
    },
    "devDependencies": {
        "@commitlint/cli": "^8.3.5",
        "@commitlint/config-conventional": "^8.3.4",
        "@commitlint/prompt": "^8.3.5",
        "@commitlint/travis-cli": "^8.3.5",
        "@docusaurus/core": "^2.0.0-alpha.50",
        "@docusaurus/preset-classic": "^2.0.0-alpha.50",
        "@now/node": "^1.6.1",
        "@semantic-release/changelog": "^5.0.1",
        "@semantic-release/git": "^9.0.0",
        "@types/eslint": "^6.8.1",
        "@types/eslint-plugin-prettier": "^3.1.0",
        "@types/gh-pages": "^2.2.0",
        "@types/jest": "^25.2.3",
        "@types/prettier": "^2.0.1",
        "@types/react": "^16.9.35",
        "@types/react-dom": "^16.9.8",
        "@types/semantic-release": "^17.0.1",
        "@typescript-eslint/eslint-plugin": "^3.0.0",
        "@typescript-eslint/parser": "^3.0.0",
        "all-contributors-cli": "^6.14.2",
        "apollo-server-testing": "^2.13.1",
        "classnames": "^2.2.6",
        "codecov": "^3.7.0",
        "commitizen": "^4.1.2",
        "cz-conventional-changelog": "3.2.0",
        "eslint": "^7.1.0",
        "eslint-config-airbnb-base": "^14.1.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-import-resolver-typescript": "^2.0.0",
        "eslint-plugin-import": "^2.20.2",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-prettier": "^3.1.3",
        "eslint-plugin-react": "^7.20.0",
        "gh-pages": "^2.2.0",
        "husky": ">=4.2.5",
        "jest": "^26.0.1",
        "lint-staged": ">=10.2.6",
        "now": "^19.0.1",
        "prettier": "^2.0.5",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "semantic-release": "^17.0.7",
        "ts-jest": "^26.0.0",
        "ts-node-dev": "^1.0.0-pre.44",
        "type-coverage": "^2.6.1",
        "types-installer": "^1.6.3",
        "typescript": "^3.9.3"
    },
    "now": {
        "alias": "figma-graphql"
    },
    "lint-staged": {
        "*.{ts,css,md}": [
            "prettier --write"
        ],
        "*.ts": [
            "eslint --fix"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "snyk": true
}
