// For a full list of options visit https://www.typescriptlang.org/docs/handbook/compiler-options.html

{
    "compilerOptions": {
        // JS compatibility
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,

        // Compilation options
        "lib": ["es2018", "esnext.asynciterable"],
        "target": "es2018",
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmit": true,
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "pretty": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,

        // Rules
        "strict": true,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "strictPropertyInitialization": false,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,

        // Resolvers
        // "baseUrl": "./src",
    },
    "exclude": ["node_modules", "docs", "old-types"]
}
